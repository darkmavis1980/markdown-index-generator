{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "module": "NodeNext",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2022"
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
  ]
}